{
	"name": "microjam",
	"description": "Most minimalistic JAMStack environment",
	"author": "Stefan Goessner <fang03@web.de>",
	"publisher": "goessner",
	"version": "0.2.6",
	"keywords": [
		"JAMStack",
		"deploy",
		"github-pages",
		"markdown",
		"microjam"
	],
	"microjam": {},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/goessner/microjam.git"
	},
	"license": "MIT",
	"engines": {
		"vscode": "^1.34.0"
	},
	"activationEvents": [
		"onLanguage:markdown"
	],
	"contributes": {
		"commands": [
			{
				"command": "extension.saveAsHtml",
				"title": "microjam: save as Html",
				"category": "Markdown",
				"icon": "$(code)"
			},
			{
				"command": "extension.rebuild",
				"title": "microjam: rebuild All.",
				"category": "Markdown",
				"icon": "$(refresh)"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "extension.saveAsHtml",
					"when": "resourceLangId == markdown && editorTextFocus",
					"group": "navigation"
				},
				{
					"command": "extension.rebuild",
					"when": "resourceLangId == markdown && editorTextFocus",
					"group": "navigation"
				}
			],
			"editor/context": [
				{
					"command": "extension.saveAsHtml",
					"when": "resourceLangId == markdown && editorTextFocus",
					"group": "navigation",
					"icon": "$(code)"
				},
				{
					"command": "extension.rebuild",
					"when": "resourceLangId == markdown && editorTextFocus",
					"group": "navigation"
				}
			],
			"explorer/context": [
				{
					"command": "extension.saveAsHtml",
					"when": "resourceLangId == markdown",
					"group": "navigation",
					"icon": "$(code)"
				},
				{
					"command": "extension.rebuild",
					"when": "resourceLangId == markdown",
					"group": "navigation"
				}
			],
			"commandPalette": [
				{
					"command": "extension.saveAsHtml",
					"when": "resourceLangId == markdown",
					"group": "navigation"
				},
				{
					"command": "extension.rebuild",
					"when": "resourceLangId == markdown",
					"group": "navigation"
				}
			]
		},
		"keybindings": [
			{
				"key": "ctrl+k h",
				"command": "extension.saveAsHtml",
				"when": "editorTextFocus"
			},
			{
				"key": "ctrl+k a",
				"command": "extension.rebuild",
				"when": "editorTextFocus"
			},
			{
				"key": "ctrl+k -",
				"command": "editor.action.insertSnippet",
				"when": "editorTextFocus",
				"args": {
					"snippet": "---\n\"layout\": \"$1\",\n\"title\": \"$TM_FILENAME_BASE\",\n\"date\": \"$CURRENT_YEAR-$CURRENT_MONTH-$CURRENT_DATE\",\n\"description\": \"$3\",\n\"tags\": [$3]\n---\n$0"
				}
			},
			{
				"key": "ctrl+k t",
				"command": "extension.insertToc",
				"when": "editorTextFocus"
			}
		],
		"markdown.previewStyles": [
			"./node_modules/katex/dist/katex.min.css",
			"./node_modules/markdown-it-texmath/css/texmath.css",
			"./css/previewstyle.css"
		],
		"markdown.markdownItPlugins": true,
		"markdown.previewScripts": [],
		"configuration": {
			"title": "microjam",
			"properties": {
				"microjam.showSaveMessage": {
					"type": "boolean",
					"default": true,
					"description": "Visibility of 'showInformationMessage' for display successful storage of 'html' file."
				},
				"microjam.markdownItPlugins": {
					"type": "object",
					"default": {},
					"description": "markdown-it-plugins to install at initialization time."
				}
			}
		}
	},
	"main": "./extension",
	"dependencies": {
		"argparse": "^1.0.9",
		"commander": "^2.19.0",
		"entities": "~2.0.0",
		"katex": "0.11.1",
		"linkify-it": "^2.2.0",
		"markdown-it": "^10.0.0",
		"markdown-it-footnote": "^3.0.2",
		"markdown-it-texmath": "^0.6.5",
		"mdurl": "^1.0.1",
		"uc.micro": "^1.0.6"
	},
	"devDependencies": {
		"@types/vscode": "^1.34.0"
	}
}
